<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!--There are various xml files with resources as resources are used for most everything
    that you put in and throw out of your application. These resource files are are the additional
    files and static content that your project uses. There are files for strings, colors,
    and themes as well. -->

    <style name="Theme.HelloAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>